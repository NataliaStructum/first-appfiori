<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout"
	xmlns:forms="sap.ui.layout.form" 
	xmlns:m="sap.m"
	height="100%">
	<ObjectPageLayout 
    id="ObjectPageLayout" showAnchorBarPopover="false"
                                            preserveHeaderStateOnScroll="false" 
                                            showAnchorBar="true" useIconTabBar="true" 
                                            alwaysShowContentHeader="true" 
                                            headerContentPinnable="false" 
                                            headerContentPinned="false" 
                                            showTitleInHeaderContent="true" 
                                            upperCaseAnchorBar="true">
		<headerTitle>
				<ObjectPageDynamicHeaderTitle>
					<expandedHeading>
						<m:Title text="Denise Smith" wrapping="true"/>
					</expandedHeading>

					<snappedHeading>
						<m:FlexBox fitContainer="true" alignItems="Center">
							<m:Avatar src="sap-icon://picture" backgroundColor="Random" class="sapUiTinyMarginEnd"/>
							<m:Title text="Denise Smith" wrapping="true" />
						</m:FlexBox>
					</snappedHeading>

					<expandedContent>
						<m:Text text="Consultor en formación"/>
					</expandedContent>

					<snappedContent>
						<m:Text text="Consultor en formación"/>
					</snappedContent>

					<snappedTitleOnMobile>
						<m:Title text="Consultor en formación"/>
					</snappedTitleOnMobile>

					<actions>
						<m:Button text="Editar" icon="sap-icon://edit" type="Transparent"/>
					</actions>
				</ObjectPageDynamicHeaderTitle>
			</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap">
				<m:Avatar src="sap-icon://picture" backgroundColor="Random" displaySize="L" class="sapUiTinyMarginEnd"/>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:ObjectStatus title="Proceso" text="Sistemas de gestión"/>
					<m:ObjectStatus title="Jefe del proceso" text="Jaime Valencia"/>
					<m:ObjectStatus title="Nivel academico" text="Ingeniero de sistemas"/>
					<m:ObjectStatus title="Ciudad" text="Cali"/>
					<m:ObjectStatus title="Celular" text="311-740-3058"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:ObjectStatus title="Area" text="Desarrollo"/>
					<m:ObjectStatus title="Antigüedad" text="6 meses"/>
					<m:ObjectStatus title="Email" text="email@address.com"/>
					<m:ObjectStatus title="Fecha ultima actualización" text="dd-MM-AAA"/>
				</layout:VerticalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
						<layout:layoutData>
							<ObjectPageHeaderLayoutData visibleS="false" visibleM="false"/>
						</layout:layoutData>
						<m:ObjectStatus text="Activo" state="Success"/>
						
				</layout:VerticalLayout>
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection titleUppercase="false" title="Datos">
				<subSections>
					
					<ObjectPageSubSection title="Datos personales" titleUppercase="false">
						<blocks>
					
							<forms:SimpleForm editable="false" layout="ColumnLayout">

									<m:Label text="Genero" />
									<m:Text text="Femenino"/>

									<m:Label text="Fecha y lugar de nacimiento" />
									<m:Text text="26/oct/2001 Cali,Valle"/>

									<m:Label text="Dirección" />
									<m:Text text="Due Dec 31 Cascaded"/>

							</forms:SimpleForm>					
						</blocks>
					</ObjectPageSubSection>

					<ObjectPageSubSection title="Datos empleado" titleUppercase="false">
						<blocks>

							<forms:SimpleForm editable="false" layout="ColumnLayout">

									<m:Label text="EPS" />
									<m:Text text="SOS"/>

									<m:Label text="No. Cuenta" />
									<m:Text text="123456789"/>

									<m:Label text="Salario fijo" />
									<m:Text text="1'300.000"/>

									<m:Label text="Tipo de contrato" />
									<m:Text text="Termino fijo"/>

							</forms:SimpleForm>					
						</blocks>
					</ObjectPageSubSection>

				</subSections>
			</ObjectPageSection>

            <ObjectPageSection titleUppercase="false" title="2014 Goals Plan">
				<subSections>
					<ObjectPageSubSection title="Experiencia" titleUppercase="false">
						<blocks>
							<m:Label text="4:00 PM, Friday"/>
						</blocks>
					</ObjectPageSubSection>
					
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="2014 Goals Plan">
				<subSections>
					<ObjectPageSubSection title="Formación técnica, conocimiento y habilidades" titleUppercase="false">
						<blocks>
							<m:Label text="4:00 PM, Friday"/>
						</blocks>
					</ObjectPageSubSection>
					
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="2014 Goals Plan">
				<subSections>
					<ObjectPageSubSection title="Estándares" titleUppercase="false">
						<blocks>
							<m:Label text="6:00 PM, Friday"/>
						</blocks>
					</ObjectPageSubSection>
					
				</subSections>
			</ObjectPageSection>

		</sections>
	</ObjectPageLayout>
</mvc:View>